@model RegisterModel

<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card">
                <article class="card-body">
                    <a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary">Sign In</a>
                    <h4 class="card-title mb-4 mt-1">Sign up</h4>
                    <form method="post" asp-controller="Home" asp-action="Register">
                        <div class="form-group">
                            <label>Your full name</label>
                            <input asp-for="@Model.FullName" class="form-control" placeholder="Name" type="text" required>
                        </div> <!-- form-group// -->
                        <div class="form-group">
                            <label>Your email</label>
                            <input asp-for="@Model.Email" class="form-control" placeholder="Email" type="email" required>
                        </div> <!-- form-group// -->
                        <div class="form-control">
                            <label>Role</label>
                            <select class="form-select ml-5" asp-for="@Model.RoleId" asp-items="@Model.AvaliableRoles" required>
                            
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Your password</label>
                            <input asp-for="@Model.Password" class="form-control" placeholder="******" type="password" required>
                        </div> <!-- form-group// -->
                        <div class="form-group">
                            <label>Confirm password</label>
                            <input asp-for="@Model.Password" class="form-control" placeholder="******" type="password" required>
                        </div> <!-- form-group// -->
                        <div class="form-group">
                            <div class="checkbox">
                                <label> <input type="checkbox" required> I agree with terms & conditions </label>
                            </div> <!-- checkbox .// -->
                        </div> <!-- form-group// -->
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> Register  </button>
                        </div> <!-- form-group// -->
                    </form>
                </article>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>